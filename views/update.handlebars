{{!-- connects to update.js --}}
{{!-- form that allows user to edit blog posts they've made --}}
  <div class="col-md-6">
    <div class="whole-form">
    <div class="form-title">
    <h3>Update Blog:</h3>
    </div>

    <form class="form update-form">
      <input type="hidden" id="blog-id" value="{{blog.id}}">
      <div class="form-group">
        <label for="blog-title">Title:</label>
        <input class="form-input" type="text" id="blog-title" value="{{blog.title}}"/>
      </div>
      <div class="form-group">
        <label for="blog-content">Content:</label>
        <textarea class="form-input" id="blog-content" name="blog-content">{{blog.content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn" id="form-btn">Update</button>
      </div>
    </form>
  </div>
  </div>

<script src="/js/update.js"></script>