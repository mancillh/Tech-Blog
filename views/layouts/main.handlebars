{{!-- displays black "header" band with "The Tech Blog" logo on all pages --}}
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>The Tech Blog</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet' />
  <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js'></script>
</head>

<body>
  <header class="main-header">
    <nav class="navbar">
      <div class="container-fluid">
        <span class="navbar-brand mb-0 h1">
          <!-- Conditionally render login or logout links -->
          {{!-- if user is logged in, display "home", "dashboard", and "logout" options --}}
          {{#if logged_in}}
          <a href="/">Home</a>
          <a href="/dashboard">Dashboard</a>
          <a id="logout" href="/api/users/logout">Logout</a>
          {{else}}
          {{!-- if user is logged out, display "home" and "login" options, redirect to login if they click "dashboard" --}}
          <a href="/">Home</a>
          <a href="/login">Dashboard</a>
          <a href="/login">Login</a>
          {{/if}}
        </span>
      </div>
      <div class="title-container">
        <h1>The Tech Blog</h1>
      </div>
    </nav>
  </header>
  <div class="page">
    <main class="container ">
      
      {{{ body }}}
    </main>
  </div>


  <!-- Render logout script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}

</body>

</html>