<div class="blog-box">
<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p class="blog-box-created-by">Created by {{user.username}} on {{format_date date_created}}</p>
</div>
</div>

<div class="col-md-6 whole-form comment-form">
    <div class="form-title">
      <h3>Leave a Comment</h3>
    </div>
    <form class="form">
      <div class="form-group">
        <label for="comment">Comment:</label>
        <textarea class="form-input" type="comment" id="comment"></textarea>
      </div>
      <div class="form-group">
        <button class="btn" id="form-btn" type="submit">Post Your Comment</button>
      </div>
    </form>

<!-- Loop over each object in the blogs array -->
{{#each comments as |comment| }}
<div>
  <span class="created-by">{{user.username}} says.... </span>
  <p>{{comment}}</p>
  <p>on {{format_date date_created}}</p>
</div>
{{/each}}